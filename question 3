
#!/usr/bin/env python3

#problem 3 FINISHED

#This scrpit assumes you already have the python3 module loaded

water_levels = list()                       #Creates an empty list
date_time = dict()
fhand = open('/ufrc/zoo6927/share/Class_Files/data/CO-OPS__8729108__wl.csv') #opens data file 
    
for line in fhand:
    line = line.replace(',', ' ') #Replaces the commas from each line with a white space
    words = line.split()
    if words[2] == 'Water': #This is to get rid of the header row
        continue
    else:
        water_levels.append(float(words[2]))
        if words[0] not in date_time:
            date_time[words[2]] = str(words[0]) + str(' ') + str(words[1]) 
            
max_diff = 0
for i, j in enumerate(water_levels[0:]):
    if water_levels[i] - water_levels[i-1] > max_diff and water_levels[i] - water_levels[i-1] < 5:
        max_diff = water_levels[i] - water_levels[i-1]
        x = str(water_levels[i])

print("Fastest rise in water level:", round(max_diff, 3), "Date and time:", date_time[x])
